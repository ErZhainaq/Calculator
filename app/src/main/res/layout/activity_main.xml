<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="MainActivity"
    tools:ignore="ResAuto">


    <TextView
        android:id="@+id/tv_zapis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingRight="10dp"
        android:text="0"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/tv_san"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingRight="10dp"
        android:text="0"
        android:textSize="50dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnYd"
            style="@style/button_func"
            android:text="c"
            android:textColor="#9C27B0" />

        <Button
            android:id="@+id/btnPlusMinus"
            style="@style/button_func"
            android:text="+/-"
            android:textColor="#9C27B0" />

        <Button
            android:id="@+id/btnProsent"
            style="@style/button_func"
            android:text="%"
            android:textColor="#9C27B0" />

        <Button
            android:id="@+id/btnBolu"
            style="@style/button_func"
            android:text="/"
            android:textColor="#9C27B0" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn7"
            style="@style/button_san"
            android:text="7" />

        <Button
            android:id="@+id/btn8"
            style="@style/button_san"
            android:text="8" />

        <Button
            android:id="@+id/btn9"
            style="@style/button_san"
            android:text="9" />

        <Button
            android:id="@+id/btnKobeity"
            style="@style/button_func"
            android:text="*"
            android:textColor="#9C27B0" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn4"
            style="@style/button_san"
            android:text="4" />

        <Button
            android:id="@+id/btn5"
            style="@style/button_san"
            android:text="5" />

        <Button
            android:id="@+id/btn6"
            style="@style/button_san"
            android:text="6" />

        <Button
            android:id="@+id/btnMinus"
            style="@style/button_func"
            android:text="-"
            android:textColor="#9C27B0" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn1"
            style="@style/button_san"
            android:text="1" />

        <Button
            android:id="@+id/btn2"
            style="@style/button_san"
            android:text="2" />

        <Button
            android:id="@+id/btn3"
            style="@style/button_san"
            android:text="3" />

        <Button
            android:id="@+id/btnPlus"
            style="@style/button_func"
            android:text="+"
            android:textColor="#9C27B0" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn0"
            style="@style/button_san"
            android:text="0" />

        <Button
            android:id="@+id/btnNukte"
            style="@style/button_san"
            android:text="." />

        <Button
            android:id="@+id/btnDel"
            style="@style/button_func"
            android:text="DELL"
            android:textColor="#9C27B0"
            android:textSize="16sp"
            tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/btnTen"
            style="@style/button_func"
            android:text="="
            android:textColor="#9C27B0" />

    </LinearLayout>

</LinearLayout>